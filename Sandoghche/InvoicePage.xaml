                        <datagrid:SfDataGrid.Columns>
                            <datagrid:GridTextColumn HeaderText="قیمت کل" MappingName="TotalPrice"/>
                            <datagrid:GridTextColumn HeaderText="قیمت" MappingName="Price"/>
                            <datagrid:GridTextColumn HeaderText="تعداد" MappingName="Number"/>
                            <datagrid:GridTextColumn HeaderText="عنوان" MappingName="ProductText"/>
                            <datagrid:GridTextColumn HeaderText="ردیف"  MappingName="RowNumber"/>
                        </datagrid:SfDataGrid.Columns>

                        <datagrid:SfDataGrid.TableSummaryRows>
                            <datagrid:GridTableSummaryRow  Title="مجموع  : {TotalPrice}" Position="Bottom" ShowSummaryInRow="True">
                                <datagrid:GridTableSummaryRow.SummaryColumns>
                                    <datagrid:GridSummaryColumn Name="TotalPrice"
                                      Format="{}{Sum}"
                                      MappingName="Price"
                                      SummaryType="DoubleAggregate" >

                                        <datagrid:GridSummaryColumn.Template>
                                            <DataTemplate>
                                                <StackLayout Orientation="Horizontal" BackgroundColor="Crimson">
                                                    <Label Text="{Binding TotalPrice }"
                                               TextColor="White"
                                               FontSize="Large"
                                               VerticalTextAlignment="Center"
                                               HorizontalTextAlignment="Start"
                                               LineBreakMode="NoWrap"
                                               HorizontalOptions="FillAndExpand"
                                               VerticalOptions="FillAndExpand">
                                                        <Label.Style>
                                                            <Style TargetType="Label">
                                                                <Setter Property="FontAttributes" Value="Italic" />
                                                            </Style>
                                                        </Label.Style>
                                                    </Label>
                                                </StackLayout>
                                            </DataTemplate>
                                        </datagrid:GridSummaryColumn.Template>

                                    </datagrid:GridSummaryColumn>


                                </datagrid:GridTableSummaryRow.SummaryColumns>
                            </datagrid:GridTableSummaryRow>
                        </datagrid:SfDataGrid.TableSummaryRows>
                    </datagrid:SfDataGrid>
                    <Label Grid.Row="4" Text="شیراز خیابان عفیف آباد" />

                </Grid>




                <!--طبقه بندی-->
                <StackLayout Grid.Column="2" Margin="10,10,10,10" >
